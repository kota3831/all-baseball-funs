<h1>ユーザー情報</h1>
  <h3><%= @user.name %></h3>
    <div>
      <%= image_tag @user.get_profile_image(100,100) %>
    </div>
    <div class="row">
      <a class="btn btn-outline-secondary btn-block edit_user.id" href="/users/<%= user.id %>/edit">
        ユーザー情報変更はこちらへ
      </a>
      
    </div>

<h1>新規投稿</h1>

  <% if @post.errors.any? %>
    <%= @post.errors.count %>件のエラーが発生しました
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @post do |f| %>
    <h4>タイトル</h4>
    <%= f.text_field :title %>
    <h4>本文</h4>
    <%= f.text_area :body %>

    <p>
      <div class="actions">
        <input type="submit" name="commit" value="投稿" class="btn btn-sm btn-warning" data-disable-with="投稿">
      </div>
    </p>
  <% end %>