<h1>ユーザー情報</h1>
  <div>
    <h3><%= @user.name %></h3>
    <%= image_tag @user.get_profile_image(100,100) %>
  </div>
  <%= link_to "ユーザー情報変更はこちらへ", edit_user_path(@user.id)  %>

  <table>
    <thead>
      <tr>
        <th colspn="1"></th>
        <th>タイトル</th>
        <th>本文</th>
      </tr>
    </thead>

    <tbody>
      <% current_user.posts.each do |post| %>
        <tr>
          <td>
            <%= link_to user_path(post.user.id) do %>
              <%= image_tag post.user.get_profile_image(100,100) %>
            <% end %>
          </td>
          <td> <%= link_to post.title, post_path(post.id) %></td>
          <td><%= post.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>