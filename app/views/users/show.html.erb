<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-4">
        <%= render 'list', post: @post, user: @user %>
      </div>

      <div class="col-md-7 offset-md-1">
        <h1>ユーザー詳細</h1>
          <div>
            <h3><%= @user.name %> さんの投稿一覧</h3>
              <%= image_tag @user.get_profile_image(100,100) %>
          </div>

          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>タイトル</th>
                <th>本文</th>
              </tr>
            </thead>

            <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td><%= post.title %></td>
                  <td><%= post.body %></td>
                  <td><p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= link_to "一つ前へ戻る", posts_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>