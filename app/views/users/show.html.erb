<h1>ユーザー詳細</h1>
  <div>
    <h3><%= @user.username %> さんの投稿一覧</h3>
      <%= image_tag @user.get_profile_image(100,100) %>
  </div>

  <table>
    <thead>
      <tr>
        <th>タイトル</th>
        <th>本文</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
