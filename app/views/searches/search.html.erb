<h2>検索結果</h2>

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image_thumbnail(50,50), class: 'rounded-circle mr-3' %></td>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <thead>
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th>投稿内容</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>

        <tr>
          <td>
            <%= link_to user_path(post.user.id) do %>
              <%= image_tag post.user.get_profile_image_thumbnail(50,50), class: 'rounded-circle mr-3' %>
            <% end %>
          </td>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>

<%= link_to "投稿一覧へ", posts_path %>