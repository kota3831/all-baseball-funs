<h1>投稿一覧</h1>

<table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th>投稿内容</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= link_to user_path(post.user.id) do %>
              <%= image_tag post.user.get_profile_image(100,100) %>
            <% end %>
          </td>
          <td> <%= link_to post.title, post_path(post.id) %></td>
          <td><%= post.body %></td>
          <td><%= link_to "ユーザー詳細へ", user_path(post.user.id) %></td>
        </tr>
      <% end %>
    </tbody>
    <tboby>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td><%= @post.body %></td>

        </tr>
      <% end %>
    </tboby>
  </table>