<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-4">
        <%= render 'users/list', post: @post, user: @user %>
      </div>

      <div class="col-md-7 offset-md-1">
        <h1>投稿一覧</h1>
          <table "table table-hover table-inverse">
              <thead>
                <tr>
                  <th>Image</th>
                  <th>Title</th>
                  <th>投稿内容</th>
                  <th colspan="1"></th>
                </tr>
              </thead>

              <tbody>
                <% @posts.each do |post| %>
                  <tr>
                    <td>
                      <%= link_to user_path(post.user.id) do %>
                        <%= image_tag post.user.get_profile_image(100,100) %>
                      <% end %>
                    </td>
                    <td> <%= link_to post.title, post_path(post.id) %></td>
                    <td><%= post.body %></td>
                    <td><%= link_to "ユーザー詳細へ", user_path(post.user.id) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
      </div>
    </div>
  </div>