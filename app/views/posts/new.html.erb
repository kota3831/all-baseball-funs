<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0" >
        <h1>新規投稿</h1>
          <% if @post.errors.any? %>
            <%= @post.errors.count %>件のエラーが発生しました
            <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>

          <%= form_with model: @post do |f| %>
            <div class="form-group">
              <label for="post_title">タイトル</label>
              <input class="form-control post_title" type="text" name="post[title]" id="post_title", value="<%= @post.title %>">
            </div>

            <div class="form-group">
              <label for="post_body">本文</label>
              <textarea class="form-control post_body" name="post[body]" id="post_body"><%= @post.body %></textarea>
            </div>

            <p>
              <div class="actions">
                <input type="submit" name="commit" value="投稿" class="btn btn-sm btn-secondary" data-disable-with="投稿">
              </div>
            </p>

            <%= link_to "マイページへ", mypage_path, class: 'btn btn-sm btn-info' %>
          <% end %>
      </div>
    </div>
  </div>

